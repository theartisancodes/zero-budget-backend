{
  "name": "zero-budget-backend",
  "private": true,
  "version": "1.0.0",
  "main": "index.ts",
  "repository": "git@github.com:theartisancodes/zero-budget-backend.git",
  "author": "kjoenzau@gmail.com",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc && prisma generate",
    "start": "node dist/index.js",
    "ts.check": "tsc --project tsconfig.json",
    "add-build": "git add -f dist",
    "dev": "tsc && nodemon dist/index.js",
    "migrate": "prisma migrate dev --name init",
    "migrate:deploy": "prisma migrate deploy",
    "generate": "prisma generate",
    "lint": "eslint --fix",
    "vercel-build": "tsc",
    "postinstall": "prisma generate"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],

  "dependencies": {
    "@apollo/server": "^4.11.0",
    "@prisma/client": "^5.20.0",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "graphql": "^16.9.0",
    "prisma": "^5.20.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/graphql": "^14.2.3",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.7.4",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@typescript-eslint/parser": "5.10.0",
    "@vercel/postgres": "^0.10.0",
    "eslint": "8.8.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^7.1.0",
    "globals": "^15.11.0",
    "graphql-tag": "^2.12.6",
    "install": "^0.13.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "npm": "^10.9.0",
    "pre-commit": "^1.2.2",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}
